<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itsme.jashim.accesskey">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.itsme.jashim.accesskey.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.itsme.jashim.accesskey.Main2Activity"
            android:configChanges="orientation"
            android:label="@string/title_activity_main2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.itsme.jashim.accesskey.AboutActivity"
            android:configChanges="orientation"
            android:label="About"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.itsme.jashim.accesskey.EditaccActivity"
            android:label="@string/title_activity_editacc"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.itsme.jashim.accesskey.loginfirst"
            android:label="@string/title_activity_loginfirst"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itsme.jashim.accesskey.login_normal"
            android:label="@string/title_activity_login_normal"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.itsme.jashim.accesskey.resetpswd"
            android:label="@string/title_activity_resetpswd"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name="ui.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.example.ExampleActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable">
            </meta-data>
        </activity>
    </application>

</manifest>